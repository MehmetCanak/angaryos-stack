    private void yetkiKontrol() {
        jMenu2.setVisible(false);
        jMenuItem2.setVisible(false);
        jMenuItem3.setVisible(false);
        jMenuItem4.setVisible(false);
        
        int k = 0;
        if(Genel.oturumGetir().yetki.indexOf("|0:1:9|") > -1){
            jMenuItem2.setVisible(true);
            k++;
        }
        
        if(Genel.oturumGetir().yetki.indexOf("|0:1:8|") > -1){
            jMenuItem4.setVisible(true);
            k++;
        }
        
        if(k > 0){
            jMenu2.setVisible(true);
        }
    }
    /**
     * Creates new form AnaPencere
     */
    public AnaPencere() throws NoSuchAlgorithmException, NoSuchPaddingException, InvalidKeyException, IllegalBlockSizeException, BadPaddingException {
        try 
        {
            GirisPencere gp = new GirisPencere(this, true);
            
            gp.setLocationRelativeTo(null);
            Genel.aktifPencereTanimla(gp);
            gp.show();

            if(Genel.oturumGetir().token.length() > 0)
                initComponents();
            else
                System.exit(0);
            
            yetkiKontrol();
        } 
        catch (Exception e) 
        {
            Hata.Gonder(e);
        }
        
    }

