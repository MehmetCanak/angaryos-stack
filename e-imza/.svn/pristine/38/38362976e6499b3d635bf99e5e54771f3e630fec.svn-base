    public GirisPencere(java.awt.Frame parent, boolean modal) throws NoSuchAlgorithmException, NoSuchPaddingException, InvalidKeyException, IllegalBlockSizeException, BadPaddingException {
        super(parent, modal);
        
        try {
            PinPencere pp = new PinPencere((Frame) this.getParent(), true);
            pp.setLocationRelativeTo(null);
            Genel.aktifPencereTanimla(pp);
            pp.show();

            if(pp.pin == null) System.exit(0);
            if(pp.pin.length() < 4) System.exit(0);
            
            Genel.sifrelemeNesnesiOlustur(pp.pin);
        } catch (Exception e) {
            Hata.Gonder(e);
        }
            
        initComponents();
    }

